<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fluidminds.android.studiosity.views.SquareView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:layout_marginLeft="@dimen/subject_square_margin"
        android:layout_marginStart="@dimen/subject_square_margin"
        android:layout_marginTop="@dimen/subject_square_margin">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </com.fluidminds.android.studiosity.views.SquareView>>
</FrameLayout>